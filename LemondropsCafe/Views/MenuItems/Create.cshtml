@using LemondropsCafe.ViewModels;
@model MenuItemViewModel

@{
    ViewData["Title"] = "New Menu Item";
}

<div class="row-text">
    <div class="col-md-8 offset-2">
        <h1>Add a new item to the menu</h1>
        <form>
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" required />
            </div>

            <div class="form-group">
                <label for="Price">Price</label>
                <input type="number" class="form-control" id="Price" name="Price" step="0.01" required />
            </div>

            <div class="form-group">
                <label for="MenuId">Section</label>
                <select class="form-control" id="Section" name="MenuId" required>
                    @foreach(var menu in Model.MenuList)
                    {
                        <option value="@menu.MenuId">@menu.Name</option>
                    }
                    
                </select>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary"/>
                <a asp-page="/MenuItems/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
